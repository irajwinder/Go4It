<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#161616"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We provide following items"
        android:textColor="#fff"
        android:textSize="14dp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/menu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calorie Control"
                        android:textColor="#fdb501"
                        android:textSize="24dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/menu1text1"
                                android:layout_width="wrap_content"
                                android:textSize="14dp"
                                android:textColor="#6A90B5"
                                android:layout_height="wrap_content"
                                android:text=" -> Chicken Katsu" />

                            <TextView
                                android:id="@+id/menu1text2"
                                android:layout_width="wrap_content"
                                android:textSize="14dp"
                                android:textColor="#DF6A90B5"
                                android:layout_height="wrap_content"
                                android:text=" -> Grilled Salamon," />

                            <TextView
                                android:id="@+id/menu1text3"
                                android:layout_width="wrap_content"
                                android:textSize="14dp"
                                android:textColor="#DF6A90B5"
                                android:layout_height="wrap_content"
                                android:text=" -> Italian Steak," />

                            <TextView
                                android:id="@+id/menu1text4"
                                android:layout_width="wrap_content"
                                android:textSize="14dp"
                                android:textColor="#DF6A90B5"
                                android:layout_height="wrap_content"
                                android:text=" -> Mango Barbeque Chicken," />

                            <TextView
                                android:id="@+id/menu1text5"
                                android:layout_width="wrap_content"
                                android:textSize="14dp"
                                android:textColor="#DF6A90B5"
                                android:layout_height="wrap_content"
                                android:text=" -> Sushi bowl" />
                        </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food1" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/menu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chef Choice"
                        android:textColor="#fdb501"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Greek Lemon Chicken" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Green Chilli Chicken," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Honey Mustard Chicken," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Italian Sausage Oreganato," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Keto Chorizo Chilli" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food2" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/menu3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meat Love"
                        android:textColor="#fdb501"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Beef Mechado" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> King Crab," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Lobster mac and cheese," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Pork Bistek," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Shrimp with green peas" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food1" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/menu4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textColor="#fdb501"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Bacon and Egg Breakfast" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Parmesan Roasted Shrimp," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Instant Pot Mongolian Beef," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Smoky Lentil Chili Recipe," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Turkey Stuffed Poblanos" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food2" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/menu5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegan"
                        android:textColor="#fdb501"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Greek Salad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Pasta Primavera," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Vegan Tacos," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Vegan crunch wrap," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textColor="#DF6A90B5"
                            android:layout_height="wrap_content"
                            android:text=" -> Vegeterial stuffed shells" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/food3" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

</ScrollView>

    <!-- this the navigation view which draws and shows the navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>